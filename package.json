{
  "name": "nodesand",
  "version": "1.0.0",
  "description": "Super Simple NodeJS Sandbox",
  "private": true,
  "type": "module",
  "exports": "./index.js",
  "scripts": {
    "once": "node src/_preload",
    "watch": "nodemon src/_preload",
    "serve": "serve src/www",
    "www": "npm run serve",
    "dev": "npm run once",
    "test": "npm run once",
    "format": "prettier .",
    "format:fix": "prettier . --write",
    "reset": "git reset HEAD --hard && git clean -f -d -x -e '.idea/' && npm i"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Jooy2 <jooy2.contact@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jooy2/nodesand.git"
  },
  "bugs": {
    "url": "https://github.com/jooy2/nodesand/issues"
  },
  "homepage": "https://github.com/jooy2/nodesand",
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.4.2",
    "serve": "^14.2.4"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "ora": "^8.1.1"
  }
}
